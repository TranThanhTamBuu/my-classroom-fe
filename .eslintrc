{
	"parser": "babel-eslint",
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 6
	},
	"plugins": ["react"],
	"rules": {
		"indent": "off",
		"prettier/prettier": [2, { "useTabs": true }],
		"react/prop-types": 0
	},
	"globals": {
		"process": true,
		"localStorage": true,
		"window": true,
		"document": true
	}
}
